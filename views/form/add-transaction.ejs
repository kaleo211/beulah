<form ng-submit="" ng-controller="TransactionAddCtrl" id="addTransaction">
  <div class="input-field">
    <input type="radio" id="expense" class="with-gap" ng-model="transaction.type" value="Expense" checked ng-click="enableExpense();">
    <label for="expense">Expense</label>
  </div>
  <div class="input-field">
    <input type="radio" id="transfer" class="with-gap" ng-model="transaction.type" value="Transfer" ng-click="enableTransfer();">
    <label for="transfer">Transfer</label>
  </div>
  &nbsp
  <div class="divider"></div>

  <div class="row">&nbsp</div>

  <div class="row">
    <div class="input-field col s6 m6 l6">
      <select id="from" ng-model="transaction.from">
        <option value="" selected></option>
        <option value="Xuebin">Xuebin</option>
        <option value="Yunhe">Yunhe</option>
      </select>
      <label>From</label>
    </div>

    <div class="input-field col s6 m6 l6">
      <select id="to" ng-model="transaction.to" disabled>
        <option value="" selected></option>
        <option value="Xuebin">Xuebin</option>
        <option value="Yunhe">Yunhe</option>
      </select>
      <label>To</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6 m6 l6">
      <select id="category" ng-model="transaction.category">
        <option value="" selected></option>
        <option value="Rent">Rent</option>
        <option value="Internet">Internet</option>
        <option value="Electric">Electric</option>
        <option value="Restaurant">Restaurant</option>
        <option value="Other">Other</option>
      </select>
      <label>Category</label>
    </div>

    <div class="input-field col s6 m6 l6">
      <input type="date" id="date" class="datepicker" ng-model="transaction.date">
      <label>Date</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m6 l6">
      <input id="total" type="number" step="0.01" class="validate" ng-model="transaction.total">
      <label for="total" data-error="Input is not a number!">Total</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m6 l6">
      <input type="text" id="memo" ng-model="transaction.memo">
      <label for="memo">Memo</label>
    </div>
  </div>
</form>
