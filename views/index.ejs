<!doctype html>
<html lang="en" ng-app="app">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/material-icons.css">
  <link rel="stylesheet" href="/scripts/angular-material/angular-material.min.css">
  <link rel="stylesheet" href="/css/md-data-table.min.css">

  <script src="/scripts/angular/angular.min.js"></script>
  <script src="/js/md-data-table.min.js"></script>
  <script src="/scripts/angular-route/angular-route.min.js"></script>
  <script src="/scripts/angular-animate/angular-animate.min.js"></script>
  <script src="/scripts/angular-aria/angular-aria.min.js"></script>
  <script src="/scripts/angular-messages/angular-messages.min.js"></script>
  <script src="/scripts/angular-material/angular-material.min.js"></script>
  <script src="/app/app.js"></script>
  <script src="/app/controllers/TransactionCtrl.js"></script>
  <script src="/app/controllers/SummaryCtrl.js"></script>
</head>

<body ng-controller="AppCtrl">
    <md-button ng-click="show($event)" class="md-fab md-primary md-fab-bottom-right"  aria-label="Add New Transaction" >
      <md-icon>add</md-icon>
    </md-button>
  <md-toolbar>
    <div class="md-toolbar-tools">
      <md-truncate>Beulah</md-truncate>
    </div>
  </md-toolbar>

  <md-content>
    <div id="all">
      <div layout="row">
        <div flex>
          <% include summary/summary.ejs %>
        </div>
      </div>

      <div layout="row">
        <div flex="100">
          <% include table/table.ejs %>
        </div>
      </div>
    </div>
  </md-content>

  <div ng-controller="TransactionAddCtrl" style="visibility: hidden">
    <div class="md-dialog-container" id="newTransactionDialog">
      <md-dialog aria-label="New Transaction">
        <form ng-cloak>
          <md-toolbar>
            <div class="md-toolbar-tools">
              <h2>New Transaction</h2>
              <span flex></span>
              <md-button class="md-icon-button" ng-click="cancel()">
                <md-icon aria-label="Close dialog">close</md-icon>
              </md-button>
            </div>
          </md-toolbar>

          <md-dialog-content>
            <div class="md-dialog-content">
              <% include form/add-transaction.ejs %>
            </div>
          </md-dialog-content>

          <md-dialog-actions layout="row">
            <span flex></span>
            <md-button ng-click="answer('useful')">1
            </md-button>
          </md-dialog-actions>
        </form>
      </md-dialog>
    </div>
  </div>
</body>
</html>
